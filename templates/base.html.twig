<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}

            {% include '@NetgenLayouts/stylesheets.html.twig' %}
            {% include '@NetgenLayoutsStandard/stylesheets.html.twig' with {full: true} %}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

            {% include '@NetgenLayouts/javascripts.html.twig' %}
            {% include '@NetgenLayoutsStandard/javascripts.html.twig' with {full: true} %}

            {{ nglayouts_template_plugin('preview.javascripts') }}
        {% endblock %}
    </head>
    <body>
        {% block layout %}
            {% block body %}{% endblock %}
        {% endblock %}

        {{ nglayouts_template_plugin('preview.body') }}
    </body>
</html>
